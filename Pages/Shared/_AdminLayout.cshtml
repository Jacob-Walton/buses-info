@{
    Layout = "_Layout";
}

<div class="admin-container">
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <h2>Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
            <ul>
                <li class="@(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Index" ? "active" : "")">
                    <a href="/Admin">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/ApiKeys" ? "active" : "")">
                    <a href="/Admin/ApiKeys">
                        <i class="fas fa-key"></i>
                        <span>API Keys</span>
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Users" ? "active" : "")">
                    <a href="/Admin/Users">
                        <i class="fas fa-users"></i>
                        <span>Users</span>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="sidebar-footer">
            <a href="/" class="button secondary">
                <i class="fas fa-sign-out-alt"></i> Exit Admin
            </a>
        </div>
    </div>
    <div class="admin-content">
        @RenderBody()
    </div>
</div>

@RenderSection("Scripts", required: false)
