@page
@using BusInfo.Models.Admin
@using Humanizer
@model AdminIndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "/Pages/Admin/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Admin Dashboard</h1>
    <div class="header-actions">
        <button class="btn-primary" id="refreshMetricsButton">
            <i class="fas fa-sync"></i>
            Refresh
        </button>
    </div>
</div>

<div class="admin-grid">
    <div class="admin-card">
        <div class="card-header">
            <h3>Users</h3>
            <span class="card-icon"><i class="fas fa-users"></i></span>
        </div>
        <div class="metric" id="totalUsers">@Model.Metrics.TotalUsers</div>
        <div class="metric-detail">@Model.TodayNewUsers new today</div>
    </div>

    <div class="admin-card">
        <div class="card-header">
            <h3>API Keys</h3>
            <span class="card-icon"><i class="fas fa-key"></i></span>
        </div>
        <div class="metric" id="activeApiKeys">@Model.Metrics.ActiveApiKeys</div>
        <div class="metric-detail">@Model.Metrics.PendingApiRequests pending requests</div>
    </div>

    <div class="admin-card">
        <div class="card-header">
            <h3>API Requests (24h)</h3>
            <span class="card-icon"><i class="fas fa-exchange-alt"></i></span>
        </div>
        <div class="metric" id="apiRequests">@Model.Metrics.ApiRequests24Hours.ToString("N0")</div>
        <div class="metric-detail">@Model.Metrics.ErrorCount errors</div>
    </div>

    <div class="admin-card">
        <div class="card-header">
            <h3>Response Time</h3>
            <span class="card-icon"><i class="fas fa-clock"></i></span>
        </div>
        <div class="metric" id="avgResponseTime">@Model.Metrics.AverageResponseTime.ToString("N1")ms</div>
    </div>
</div>

<div class="admin-sections">
    <!-- System Health -->
    <div class="admin-section">
        <div class="section-header">
            <h2>System Health</h2>
            <div class="status-indicator @(Model.Health.AllHealthy ? "healthy" : "warning")">
                <i class="fas fa-circle"></i>
                @(Model.Health.AllHealthy ? "All Systems Operational" : "Issues Detected")
            </div>
        </div>
        <div class="service-grid">
            @foreach (var service in Model.Health.Services)
            {
                <div class="service-status @service.Value.ToString().ToLower()">
                    <span class="service-name">@service.Key</span>
                    <span class="status-icon">
                        <i class="fas fa-@(service.Value == ServiceStatus.Healthy ? "check" : "exclamation")-circle"></i>
                    </span>
                </div>
            }
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="admin-section">
        <div class="section-header">
            <h2>Recent Activity</h2>
            <a href="/admin/activity" class="view-all">View All</a>
        </div>
        <div class="activity-list">
            @foreach (var activity in Model.RecentActivities)
            {
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-@activity.Icon"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-text">@activity.Description</div>
                        <div class="activity-time">@activity.Timestamp.Humanize()</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/admin/dashboard.js" asp-append-version="true"></script>
}