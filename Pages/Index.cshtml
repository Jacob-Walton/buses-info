@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="home-container">
    <section class="hero">
        <div class="hero-content">
            <h1 class="hero-title">Bus Info</h1>
            <p class="hero-subtitle">Unofficial bus arrival information</p>
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="/buses" class="button primary">View Bus Information</a>
            }
            else
            {
                <a href="/Login" class="button primary">Sign in to view bus information</a>
            }
            
            <p class="disclaimer">This is an independent project and is not affiliated with or endorsed by Runshaw College.</p>
        </div>
    </section>
</div>